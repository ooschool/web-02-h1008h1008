<div class="wrapper  max-w-sm mx-auto mt-16 p-4 rounded-lg ">
    <div class="logo flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="256" height="256" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
        </svg>
    </div>
    <div class="text-center mt-4 name text-lg font-semibold text-gray-700">
        Member Register
    </div>
    <form class="mt-3">
        <div class="form-field flex items-center p-2 rounded-lg shadow-md bg-white">
            <input type="text" name="email address" id="emailaddress" placeholder="email address"
                   class="w-full outline-none bg-transparent text-gray-700">
        </div>
        <div class="form-field flex items-center mt-3 p-2 rounded-lg shadow-md bg-white">
            <input type="password" name="password" id="pwd" placeholder="Password"
                   class="w-full outline-none bg-transparent text-gray-700">
        </div>
        <div class="form-field flex items-center mt-3 p-2 rounded-lg shadow-md bg-white">
            <input type="password" name="conpassword" id="conpwd" placeholder="Confirm Password"
                   class="w-full outline-none bg-transparent text-gray-700">
        </div>
        <button class="btn w-full mt-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg" id = "registerBtn">
            Register
        </button>
    </form>
    <div class="text-center text-sm mt-4">
        <a href="forget" class="text-blue-500 hover:text-blue-600">Forget password?</a>
        <span class="text-gray-500">or</span>
        <a href="login" class="text-blue-500 hover:text-blue-600">Login</a>
    </div>
</div>
<script src=".\static\js\register.js"></script>