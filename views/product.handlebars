<div class="ContentArea w-200 h-screen px-6 py-12 flex-col justify-start items-start gap-4 inline-flex">
  <div class="NavLink p-2 rounded-lg justify-center items-center gap-2 inline-flex">
    <div class="Icon w-6 h-6 relative"></div>
    <div class="Link text-stone-900 text-xl font-normal">Back</div>
  </div>
  <div class="mainproduct">
        <form id="myForm" class="myform fixed inset-0 w-full h-full flex items-center justify-center bg-opacity-50 bg-gray-900 hidden">
            <div class="form bg-white p-4 w-80 rounded shadow-md mx-auto flex flex-col items-center">
              <img class="Image w-60 h-72" src="{{ productDetail.imageUrl }}" />
              <div class="AppleWatch text-stone-900 text-4xl font-bold">{{ productDetail.productName }}</div>
              <div class="Series5Se text-stone-900 text-opacity-50 text-xl font-medium">{{ productDetail.productDescription }}</div>
              <div class="flex items-center mt-4">
                  <label for="quantity" class="text-stone-900 font-medium text-lg mr-2">quatityï¼š</label>
                  <select id="quantity" name="quantity" class="border rounded py-1 px-2">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                  </select>
              </div>
              <div id = "updatebutton" class="Button text-white text-lg font-medium mt-4 rounded-lg" id="plus" value={{ productDetail.productindex }}>Add to Bag</div>
          </div>
        </form>


        <div class="TopArea w-400 justify-start items-start gap-6 inline-flex">
          <div class="ImageArea p-2 justify-start items-start gap-4 flex">
            <div class="MainImage p-2 bg-white rounded-xl justify-start items-start gap-2.5 flex">
              <div class="ProductImage w-60 h-72 flex-col justify-center items-center inline-flex">
                <img class="Image w-60 h-72" src="{{ productDetail.imageUrl }}" />
              </div>
            </div>
          </div>
          <div class="TextContent grow shrink basis-0 p-2 flex-col justify-start items-start inline-flex">
            <div class="Header p-2 flex-col justify-start items-start gap-2 flex">
              <div class="AppleWatch text-stone-900 text-6xl font-bold">{{ productDetail.productName }}</div>
              <div class="Series5Se text-stone-900 text-opacity-50 text-3xl font-medium">{{ productDetail.productDescription }}</div>
            </div>
            <div class="Special px-2 py-4 justify-start items-center gap-2 inline-flex">
              <div class="Rating pr-4 justify-center items-center gap-2 flex">
                <div class="Star01 w-6 h-6 relative"></div>
                <div class="Star02 w-6 h-6 relative"></div>
                <div class="Star03 w-6 h-6 relative"></div>
                <div class="Star04 w-6 h-6 relative"></div>
                <div class="Star05 w-6 h-6 relative"></div>
              </div>
              <div class="55 text-emerald-700 text-xl font-normal">{{productDetail.productstar}}</div>
            </div>
            <div class="52999 text-stone-900 text-3xl font-medium">{{ productDetail.productPrice }}</div>
            <div class="ShortDescription self-stretch h-32 p-2 justify-start items-start gap-2.5 inline-flex">
              <div class="briefDescription grow shrink basis-0 self-stretch text-stone-900 text-xl font-normal">{{ productDetail.productDescriptionshort }}</div>
            </div>
            <div class="Cta self-stretch h-14 p-2 flex-col justify-center items-end gap-2.5 flex">
              <div class="Button px-6 py-2 bg-stone-900 rounded-2xl justify-center items-center gap-2 inline-flex">
                <div class="Icon w-6 h-6 relative"></div>
                <div class="Button text-white text-xl font-medium" id="plus" value={{productDetail.productindex}}>Add to Bag</div>
              </div>
            </div>
          </div>
        </div>
        <div class="BottomArea self-stretch h-96 p-2 flex-col justify-start items-center gap-4 flex">
          <div class="Line2 w-96 h-px border border-stone-900 border-opacity-50"></div>
          <div class="Description self-stretch h-96 px-2 py-4 flex-col justify-start items-start gap-2 flex">
            <div class="Description text-stone-900 text-3xl font-medium">Description</div>
            <div class="Description self-stretch h-96 text-zinc-600 text-xl font-normal">{{ productDetail.productDescriptionlong }}</div>
          </div>
        </div>
  </div>
</div>
<script src="\js\product.js"></script>